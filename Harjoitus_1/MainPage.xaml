<Page
    x:Class="Harjoitus_1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Harjoitus_1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        
        <Button Margin="20" Click="Button_Click">Testipainike</Button>
        
        <TextBlock Width="500" HorizontalAlignment="Left" Margin="20" FontSize="30" Foreground="BlanchedAlmond">Tervetuloa ohjelman kättäjäksi</TextBlock>
        
        <TextBox Name="UserText" Margin="20"></TextBox>

        <ComboBox Margin="20" Width="200">
            <ComboBoxItem>Banaani</ComboBoxItem>
            <ComboBoxItem>Omena</ComboBoxItem>
            <ComboBoxItem>Hunajaherkkumeloni</ComboBoxItem>
        </ComboBox>
        
    </StackPanel>
</Page>
